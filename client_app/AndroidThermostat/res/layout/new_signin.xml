<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:contentDescription="logo"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/et_signin_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext1"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="5dip"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dip"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_signin_pwd"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext1"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="5dip"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="5dip"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_singin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button1"
        android:text="@string/btnSignin"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_forgot_pwd"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/button_style2"
            android:drawableRight="@drawable/next_grey"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Forgot Password?"
            android:textColor="@drawable/button_color1"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/button_style2"
            android:drawableRight="@drawable/next_green"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Sign up?"
            android:textColor="@drawable/button_color2"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>